@model IEnumerable<milkrate.Models.Piece>

@{
    ViewData["Title"] = "Index";
}
<body>

    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]">@Html.DisplayNameFor(model => model.Title)</a> | <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.ReleaseDate)</a>
    <div class="d-flex justify-content-center" style="flex-basis: 20%; flex-wrap: wrap; margin: auto;">

        @foreach (var item in Model)
        {

            <a asp-action="Details" asp-route-id="@item.ID">
                <div class="card text-center border-light d-flex align-items-center" style="width: 16rem; margin: .5rem;">
                    <div>
                        <img class="card-img-top img-fluid" src="@Url.Content(item.ImageLink)" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            @if (item.AveragePrice > 1)
                            {
                                @Html.DisplayFor(modelItem => item.AveragePrice)
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.RetailPrice)
                            }
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>

</body>
