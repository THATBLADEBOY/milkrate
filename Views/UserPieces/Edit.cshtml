@model milkrate.Models.UserPiece

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserPiece</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="PieceId" />
            <input type="hidden" asp-for="Value" />
            <input type="hidden" asp-for="Piece" />
            <input type="hidden" asp-for="Condition" />

            
            <div>
                <select asp-for="ConditionId" class="form-control" asp-items="ViewBag.ConditionId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
    <a class="btn btn-primary" asp-controller="UserPieces" asp-action="Delete" asp-route-id="@Model.Id">Remove From Closet</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
