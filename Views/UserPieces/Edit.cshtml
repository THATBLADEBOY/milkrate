@model milkrate.Models.UserPiece

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="PieceId" />
            <input type="hidden" asp-for="Value" />
            <input type="hidden" asp-for="Piece" />
            <input type="hidden" asp-for="Condition" />
            <h5>Condition:</h5>
            <div>
                <select asp-for="ConditionId" class="form-control" asp-items="ViewBag.ConditionId"></select>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Update" class="btn" style="color:white; background-color: #4800ff; font-weight: bold;" />
                <a class="btn btn-danger" asp-controller="UserPieces" asp-action="Delete" asp-route-id="@Model.Id">Remove From Closet</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color: #4800ff" asp-action="Index">Back to Closet</a>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
