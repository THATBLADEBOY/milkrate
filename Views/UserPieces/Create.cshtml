@model milkrate.Models.UserPiece

@{
    ViewData["Title"] = "Create";
}

<h1>Please select a condition</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>Condition:</h5>
            <div>
                <select asp-for="ConditionId" class="form-control" asp-items="ViewBag.ConditionId"></select>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input style="color:white; background-color: #4800ff; font-weight: bold;" type="submit" value="Add To Closet" class="btn" /> | <a style=" color: #4800ff" asp-action="Index">Back to Browse</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
